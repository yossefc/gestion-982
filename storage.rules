rules_version = '2';

// Firebase Storage Security Rules pour Gestion 982
service firebase.storage {
  match /b/{bucket}/o {

    // Dossier PDFs des attributions
    match /pdf/assignments/{fileName} {
      // Lecture: utilisateurs authentifiés seulement
      allow read: if request.auth != null;

      // Écriture: utilisateurs authentifiés seulement
      // Limite de taille: 10MB max
      allow write: if request.auth != null
                   && request.resource.size < 10 * 1024 * 1024
                   && request.resource.contentType == 'application/pdf';
    }

    // Bloquer tout autre accès par défaut
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
