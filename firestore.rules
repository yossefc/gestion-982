rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ⚠️ MODE DÉVELOPPEMENT - ACCÈS COMPLET POUR TOUS LES UTILISATEURS AUTHENTIFIÉS
    // TODO: Restaurer les règles strictes en production
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Tous les documents - accès complet si authentifié
    match /{document=**} {
      allow read, write: if isAuthenticated();
    }
  }
}
